<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_add_human_border">
    <FrameLayout
        android:id="@+id/popTitleLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="人物详情"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"/>
        <Button
            android:id="@+id/popOperationButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/plus_sign"
            android:backgroundTint="@color/white"
            android:layout_gravity="end"/>
    </FrameLayout>

        <LinearLayout
            android:id="@+id/popImageLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/popTitleLinearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="头像："
                android:textColor="#000000"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/popImage"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:src="@mipmap/ic_result_menu"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popNameLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/popImageLinearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="姓名："
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/popNameText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物姓名"
                android:maxLength="7"
                android:singleLine="true" />
            <EditText
                android:id="@+id/popNameEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物姓名"
                android:maxLength="7"
                android:singleLine="true"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popGenderLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/popNameLinearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="性别："
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/popGenderText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物性别"
                android:singleLine="true" />
            <EditText
                android:id="@+id/popGenderEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物性别"
                android:singleLine="true"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popPhoneLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/popGenderLinearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="电话："
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/popPhoneText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物电话"
                android:singleLine="true" />
            <EditText
                android:id="@+id/popPhoneEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物电话"
                android:singleLine="true"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popEmailLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/popPhoneLinearLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="邮箱："
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/popEmailText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物邮箱"
                android:singleLine="true" />
            <EditText
                android:id="@+id/popEmailEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物邮箱"
                android:singleLine="true"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popNotesLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/popEmailLinearLayout"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="备注："
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/popNotesText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物备注"
                android:maxLength="100"
                android:maxLines="3" />
            <EditText
                android:id="@+id/popNotesEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:hint="人物备注"
                android:maxLength="100"
                android:maxLines="3"
                android:singleLine="true"
                android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/popNotesLinearLayout">
            <Button
                android:id="@+id/YesToAdjust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="确认"
                android:visibility="gone"/>
            <Button
                android:id="@+id/NoToAdjust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="取消"
                android:visibility="gone"/>
        </LinearLayout>

</RelativeLayout>